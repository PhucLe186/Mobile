<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/onback" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="313dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Sửa hồ sơ"
            android:textSize="23dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/changeImageText"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Thay đổi ảnh"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:id="@+id/aboutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textStyle="bold"
            android:text="Giới thiệu về bạn" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">
        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="Tên"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/nameValue"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Phucle"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/nameEditIcon"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/than"
            app:tint="#888888" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">
        <TextView
            android:id="@+id/tiktokIdLabel"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="TikTokID"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tiktokIdValue"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Phucle_1806"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/tiktokIdEditIcon"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/than"
            app:tint="#888888" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">
        <TextView
            android:id="@+id/tiktokLink"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="end"
            android:text="tiktok.com/@Phucle_1806"
            android:textColor="#888888"
            android:textSize="17dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9">
        <TextView
            android:id="@+id/bioLabel"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="Tiểu sử"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/bioValue"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Thêm tiểu sử"
            android:textColor="#888888"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/bioEditIcon"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/than"
            app:tint="#888888" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10">
        <TextView
            android:id="@+id/linkLabel"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="Liên Kết"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/linkValue"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Thêm"
            android:textColor="#888888"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/linkEditIcon"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/than"
            app:tint="#888888" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">
        <TextView
            android:id="@+id/aiSelfLabel"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="AI Self"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/aiSelfValue"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Tạo AI Self"
            android:textColor="#888888"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/aiSelfEditIcon"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/than"
            app:tint="#888888" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>